<%- include ('partials/header.ejs')%>
<%- include ('partials/navbar.ejs')%>

<div class="container">

    <h2>Lista de Pergintas</h2>

    <% perguntas.forEach(pergunta => { %>
        <br>
        <div class="card">
            <div class="card-body">
                <h3><%= pergunta.titulo %></h3>
            </div>
            <div class="card-footer">
                <a href="/pergunta/<%= pergunta.id %>" class="btn btn-primary">Responder</a>
            </div>
        </div>
    <% }) %>

</div>

<%- include ('partials/footer.ejs')%>